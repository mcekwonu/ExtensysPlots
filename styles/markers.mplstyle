# MATPLOTLIB style for scatter plots

##---------------------------------------------------------------------------------------------------------
# Set markers with colors and no lines
##----------------------------------------------------------------------------------------------------------
axes.prop_cycle: (cycler('marker', ['o', 'v', '^', '<', 's', 'd', '>', 'x', 'D', '+', 'p', '*']) + cycler('color', ['FF0000', '8B0000', '696969', '0000FF', '800000', '00FF00', 'FF4500', 'D2691F', 'FFFF00', 'FFD700', 'CD853F', 'CCEEFF']) + cycler('ls', [' ', ' ', ' ', ' ', ' ', ' ',  ' ',  ' ',  ' ',  ' ',  ' ',  ' ']))

##---------------------------------------------------------------------------------------------------------
# Set marker size
##---------------------------------------------------------------------------------------------------------
lines.markersize: 3.5
